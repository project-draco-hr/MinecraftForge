{
  shx=shy=shz=0;
  long rand=0;
switch (block.getOffsetType()) {
case XYZ:
    rand=MathHelper.getPositionRandom(blockPos);
  shy=((float)((rand >> 20) & 0xF) / 0xF - 1) * .2f;
case XZ:
shx=((float)((rand >> 16) & 0xF) / 0xF - .5f) * .5f;
shz=((float)((rand >> 24) & 0xF) / 0xF - .5f) * .5f;
default :
}
}
