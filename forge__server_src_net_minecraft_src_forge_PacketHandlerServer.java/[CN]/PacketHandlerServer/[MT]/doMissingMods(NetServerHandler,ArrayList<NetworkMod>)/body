{
  PacketMissingMods pkt=new PacketMissingMods(true);
  pkt.Mods=new String[list.size()];
  int x=0;
  for (  NetworkMod mod : list) {
    pkt.Mods[x++]=mod.toString();
  }
  if (DEBUG) {
    System.out.println("S->C: " + pkt.toString(true));
  }
  net.sendPacket(pkt.getPacket());
  disconnectUser(net);
}
