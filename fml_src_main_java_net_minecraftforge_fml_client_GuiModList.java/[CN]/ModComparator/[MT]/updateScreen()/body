{
  super.updateScreen();
  search.updateCursorCounter();
  if (!search.getText().equals(lastFilterText)) {
    reloadMods();
    sorted=false;
  }
  if (!sorted) {
    reloadMods();
    Collections.sort(mods,sortType.comparator);
    selected=modList.selectedIndex=mods.indexOf(selectedMod);
    sorted=true;
  }
}
