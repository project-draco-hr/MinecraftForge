{
  int offset=y;
  if (logoPath != null) {
    offset-=logoDims.height + 10;
  }
  if (offset <= 0)   return;
  int lineIdx=offset / 10;
  if (lineIdx >= lines.size())   return;
  ITextComponent line=lines.get(lineIdx);
  if (line != null) {
    int k=-4;
    for (    ITextComponent part : (Iterable<ITextComponent>)line) {
      if (!(part instanceof TextComponentString))       continue;
      k+=GuiModList.this.fontRendererObj.getStringWidth(((TextComponentString)part).getChatComponentText_TextValue());
      if (k >= x) {
        GuiModList.this.handleComponentClick(part);
        break;
      }
    }
  }
}
