{
  super(x,y,z,world,block,blockMetadata);
  this.player=player;
  if (block == null || !player.canHarvestBlock(block) || block.canSilkHarvest(world,player,x,y,z,blockMetadata) && EnchantmentHelper.getSilkTouchModifier(player)) {
    this.exp=0;
  }
 else {
    int meta=block.getDamageValue(world,x,y,z);
    int bonusLevel=EnchantmentHelper.getFortuneModifier(player);
    this.exp=block.getExpDrop(world,meta,bonusLevel);
  }
}
