{
  super(world,pos,state);
  this.player=player;
  if (state == null || !ForgeHooks.canHarvestBlock(state.getBlock(),player,world,pos) || (state.getBlock().canSilkHarvest(world,pos,world.getBlockState(pos),player) && EnchantmentHelper.getEnchantmentLevel(Enchantments.field_185306_r,player.func_184614_ca()) > 0)) {
    this.exp=0;
  }
 else {
    int bonusLevel=EnchantmentHelper.getEnchantmentLevel(Enchantments.field_185308_t,player.func_184614_ca());
    this.exp=state.getBlock().getExpDrop(state,world,pos,bonusLevel);
  }
}
