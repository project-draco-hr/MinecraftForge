{
  super(world,pos,state);
  this.player=player;
  if (state == null || !ForgeHooks.canHarvestBlock(state.getBlock(),player,world,pos) || (state.getBlock().canSilkHarvest(world,pos,world.getBlockState(pos),player) && EnchantmentHelper.getSilkTouchModifier(player))) {
    this.exp=0;
  }
 else {
    int bonusLevel=EnchantmentHelper.getFortuneModifier(player);
    this.exp=state.getBlock().getExpDrop(world,pos,bonusLevel);
  }
}
