{
  if (side == Side.CLIENT) {
    FMLCommonHandler.instance().bus().post(new FMLNetworkEvent.ClientDisconnectionFromServerEvent(manager));
  }
 else {
    FMLCommonHandler.instance().bus().post(new FMLNetworkEvent.ServerDisconnectionFromClientEvent(manager));
  }
  cleanAttributes(ctx);
  ctx.close(promise);
}
